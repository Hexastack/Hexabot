{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@hexabot/dev": [
        "./src"
      ],
      "@hexabot/dev/*": [
        "./src/*"
      ],
      "@hexabot/attachment/*": [
        "../../packages/api/src/attachment/*"
      ],
      "@hexabot/channel/*": [
        "../../packages/api/src/channel/*"
      ],
      "@hexabot/chat/*": [
        "../../packages/api/src/chat/*"
      ],
      "@hexabot/cms/*": [
        "../../packages/api/src/cms/*"
      ],
      "@hexabot/extensions/*": [
        "../../packages/api/src/extensions/*"
      ],
      "@hexabot/helper/*": [
        "../../packages/api/src/helper/*"
      ],
      "@hexabot/i18n/*": [
        "../../packages/api/src/i18n/*"
      ],
      "@hexabot/migration/*": [
        "../../packages/api/src/migration/*"
      ],
      "@hexabot/nlp/*": [
        "../../packages/api/src/nlp/*"
      ],
      "@hexabot/plugins/*": [
        "../../packages/api/src/plugins/*"
      ],
      "@hexabot/user/*": [
        "../../packages/api/src/user/*"
      ],
      "@hexabot/utils/*": [
        "../../packages/api/src/utils/*"
      ],
      "@/*": [
        "../../packages/api/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
