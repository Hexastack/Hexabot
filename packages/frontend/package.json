{
  "name": "@hexabot/frontend",
  "private": true,
  "version": "2.3.0",
  "description": "Hexabot is a solution for creating and managing chatbots across multiple channels, leveraging AI for advanced conversational capabilities. It provides a user-friendly interface for building, training, and deploying chatbots with integrated support for various messaging platforms.",
  "author": "Hexastack",
  "license": "FCL-1.0-ALv2",
  "scripts": {
    "dev": "vite",
    "dev:static": "vite build --watch --mode development",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview --host 0.0.0.0 --port 8080",
    "start": "pnpm run preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "pnpm run lint:fix",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit --downlevelIteration"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix --config eslint.config-staged.cjs"
  },
  "dependencies": {
    "@chatscope/chat-ui-kit-react": "^2.0.3",
    "@chatscope/chat-ui-kit-styles": "^1.4.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource/roboto": "^5.1.0",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@mui/icons-material": "^5.15.16",
    "@mui/material": "^5.15.16",
    "@mui/x-data-grid": "^7.3.2",
    "@xyflow/react": "^12.8.5",
    "autolinker": "^4.1.5",
    "axios": "^1.12.2",
    "dayjs": "^1.11.13",
    "eazychart-css": "^0.2.1-alpha.0",
    "eazychart-react": "^0.8.0-alpha.0",
    "@hexabot/widget": "workspace:*",
    "i18next-http-backend": "^2.6.2",
    "normalizr": "^3.6.2",
    "notistack": "^3.0.1",
    "qs": "^6.12.1",
    "random-seed": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.5",
    "react-i18next": "^14.1.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.26.2",
    "react-window": "^1.8.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/react-window": "^1.8.5",
    "@types/node": "20.12.12",
    "@types/qs": "^6.9.15",
    "@types/random-seed": "^0.3.5",
    "@types/react": "18.3.2",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^4.4.0",
    "eslint": "^9.37.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "rimraf": "^6.0.1",
    "lint-staged": "^15.3.0",
    "typescript": "^5.8.3",
    "vite": "^5.0.11"
  },
  "engines": {
    "node": "^20.18.1"
  }
}
