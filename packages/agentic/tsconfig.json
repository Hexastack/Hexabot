{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "types": ["jest", "node"],
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**"]
}
