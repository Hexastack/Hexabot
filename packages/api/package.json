{
  "name": "@hexabot/api",
  "private": true,
  "version": "3.0.0",
  "description": "Hexabot is a solution for creating and managing chatbots across multiple channels, leveraging AI for advanced conversational capabilities. It provides a user-friendly interface for building, training, and deploying chatbots with integrated support for various messaging platforms.",
  "author": "Hexastack",
  "license": "FCL-1.0-ALv2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "types",
    "!src/**/*.spec.ts",
    "!src/.hexabot"
  ],
  "scripts": {
    "dev": "pnpm run start:dev",
    "postinstall": "patch-package",
    "build": "pnpm run frontend:build && nest build && pnpm run copy-types && pnpm run frontend:copy",
    "copy-types": "node ./scripts/copy-types.js",
    "frontend:build": "node ./scripts/frontend-build.js",
    "frontend:copy": "node ./scripts/frontend-copy.js",
    "clean": "rimraf dist coverage",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "pnpm exec nest start",
    "doc": "pnpm exec compodoc --hideGenerator -p tsconfig.doc.json -s -r 9003 -w",
    "start:dev": "pnpm exec nest start --watch",
    "start:debug": "pnpm exec nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "start:repl": "pnpm run start -- --entryFile repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand --logHeapUsage --detectOpenHandles --forceExit",
    "test:half": "jest --logHeapUsage --maxWorkers=50% --testTimeout=10000",
    "test:full": "jest --logHeapUsage --maxWorkers=100% --testTimeout=10000",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cov": "jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:clear": "jest --clearCache",
    "typecheck": "tsc --noEmit",
    "reset": "pnpm install && pnpm run containers:restart",
    "reset:hard": "pnpm install --force && pnpm run containers:rebuild",
    "cli": "HEXABOT_CLI=1 ts-node --files --log-error --compiler-options '{\"diagnostics\": true}' src/cli.ts"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix --config eslint.config-staged.cjs"
  },
  "dependencies": {
    "@keyv/redis": "^5.1.3",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.6",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.6",
    "@resvg/resvg-js": "^2.6.2",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/uuid": "^10.0.0",
    "async-mutex": "^0.5.0",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cache-manager": "^7.2.4",
    "cacheable": "^2.1.0",
    "class-transformer": "^0.5.1",
    "connect-typeorm": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "csrf-sync": "^4.2.1",
    "express-session": "^1.18.2",
    "handlebars": "^4.7.8",
    "keyv": "^5.5.3",
    "mime": "^1.6.0",
    "module-alias": "2.2.3",
    "nest-commander": "^3.20.1",
    "nestjs-dynamic-providers": "^0.3.7",
    "nestjs-i18n": "^10.5.1",
    "nodemailer": "^7.0.9",
    "papaparse": "^5.5.3",
    "passport": "^0.7.0",
    "passport-anonymous": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "patch-package": "^8.0.1",
    "pg": "^8.13.1",
    "redis": "^5.8.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sanitize-filename": "^1.6.3",
    "slug": "^11.0.0",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27",
    "uuid": "^9.0.1",
    "zod": "^3.24.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.31",
    "@hexabot/frontend": "workspace:*",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cookie-signature": "^1.1.2",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/module-alias": "^2.0.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.3.1",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^6.4.14",
    "@types/papaparse": "^5.3.16",
    "@types/passport-anonymous": "^1.0.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/slug": "^5.0.9",
    "@types/supertest": "^6.0.3",
    "@types/uid-safe": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^15.3.0",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "socket.io-client": "^4.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^5.1.3"
  },
  "optionalDependencies": {
    "@css-inline/css-inline-linux-arm64-musl": "^0.14.1",
    "@resvg/resvg-js-darwin-arm64": "^2.6.2",
    "@resvg/resvg-js-linux-arm64-musl": "^2.6.2"
  },
  "jest": {
    "globalSetup": "<rootDir>/../test/global-setup.ts",
    "globalTeardown": "<rootDir>/../test/global-teardown.ts",
    "setupFiles": [
      "<rootDir>/../test/setup-tests.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/../test/jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    }
  },
  "engines": {
    "node": "^20.18.1"
  }
}